# Database - Railway will provide this automatically when you add PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/alana

# JWT Secret - Generate a strong secret for production
SECRET_KEY=your-super-secret-key-change-this-in-production

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# OIDC/SSO Settings (for authentik integration)
OIDC_ISSUER=https://auth.example.com/application/o/your-app/
OIDC_CLIENT_ID=your-client-id

# Security settings
REQUIRE_EMAIL_VERIFIED=true
REQUIRE_MFA=false

# App settings
DEBUG=false
